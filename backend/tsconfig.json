{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./",             
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],   
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "tests", "prisma"],  
  "exclude": ["node_modules", "dist"]
}
